@model ExcluirTarefaViewModel

@{
    ViewBag.Titulo = "Exclusão de Tarefa";
}

<div class="container-fluid my-5 px-4">
    <div class="card rounded-4 border-0">
        <div class="card-body p-md-5">
            <h3>Formulário de Exclusão</h3>

            <p class="mt-4">Você deseja realmente excluir a tarefa '@Model.Titulo'?</p>

            <form action="/tarefas/excluir/@Model.Id" method="post">
                <div class="form-group d-flex flex-column align-items-center justify-content-end gap-3">
                    <a href="/tarefas" class="btn btn-outline-primary rounded-3 px-2">Cancelar</a>
                    <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                </div>
            </form>
        </div>
    </div>
</div>