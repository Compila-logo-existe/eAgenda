@using eAgenda.WebApp.Models
@model VisualizarCategoriasViewModel

@{
    ViewBag.Titulo = "Visualização de Categorias";
}

<p>
    <a class="btn btn-cobre px-4 rounded-pill shadow-sm" href="/categorias/cadastrar">
        <i class="bi bi-plus me-2"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr class="border border-light opacity-25" />

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model.Registros)
    {
        <div class="col">
            <div class="card mesa-card-dark h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-warning">
                            Titúlo: @item.Titulo
                        </h5>
                        <p class="card-text">
                            <span class="">Despesas: @item.Despesas.Count</span>
                        </p>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a class="btn btn-primary rounded-circle" title="Ver Detalhes" asp-action="Detalhes" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i>
                        </a>

                        <a class="btn btn-primary rounded-circle" title="Editar Despesa" asp-action="Editar" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-primary rounded-circle" title="Excluir Despesa" asp-action="Excluir" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
