@using eAgenda.WebApp.Models
@model EditarCategoriaViewModel;

@{
    ViewBag.Titulo = "Edição de Categoria";
}

<hr class="border border-dark opacity-25" />
<div class="d-flex flex-wrap justify-content-between my-5 gap-1">
    <div class="col-12 col-md-6 align-self-center m-auto">
		<div class="card rounded-4 border-0">
            <div class="card-body p-md-4">
                <form asp-action="Editar" asp-route-id="@Model.Id" method="post">
                    <h3>Formulário de Edição</h3>

                    @if (ViewData.ModelState["CadastroUnico"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            @ViewData.ModelState["CadastroUnico"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="form-group d-grid mt-2">
                        <label asp-for="Titulo" class="control-label">Titulo:</label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger d-block mt-2"></span>
                    </div>
                  
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-3">
						<a href="/categorias" class="btn btn-outline-primary rounded-3 px-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary rounded-4 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}