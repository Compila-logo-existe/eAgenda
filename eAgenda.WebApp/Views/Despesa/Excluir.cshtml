@using eAgenda.WebApp.Models
@model ExcluirDespesaViewModel;

@{
    ViewBag.Titulo = "Exclusão de Despesa";
}

<hr class="border border-dark opacity-25" />
<div class="d-flex flex-wrap justify-content-between my-5 gap-1">
    <div class="col-12 col-md-6 align-self-center m-auto">
		<div class="card rounded-4 border-0">
            <div class="card-body p-md-4">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir a Despesa "@Model.Titulo"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex flex-column align-items-center justify-content-end gap-3">
                        <a href="/despesas" class="btn btn-outline-primary rounded-3 px-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>