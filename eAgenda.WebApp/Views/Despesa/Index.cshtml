@using eAgenda.WebApp.Models
@model VisualizarDespesasViewModel

@{
    ViewBag.Titulo = "Visualização de Despesas";
}

<p>
    <a class="btn btn-cobre px-4 rounded-pill shadow-sm" href="/despesas/cadastrar">
        <i class="bi bi-plus me-2"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr class="border border-light opacity-25" />

@if (!Model.Registros.Any())
{
    <p class="fw-semibold mt-3">Ainda não há nenhum item para esta tarefa...</p>
}
else{
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model.Registros)
    {
        <div class="col">
            <div class="card mesa-card-dark h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-warning">
                            Titúlo: @item.Titulo
                        </h5>
                        <p class="card-text">
                            <span class="">Descricao: @item.Descricao</span>
                        </p>
                        <p class="card-text">
                            <span class="">DataOcorrencia: @item.DataOcorrencia</span>
                        </p>
                        <p class="card-text">
                            <span class="">Valor: @item.Valor</span>
                        </p>
                        <p class="card-text">
                            <span class="">FormaPagamento: @item.FormaPagamento</span>
                        </p>
                            <p class="card-text">
                                <span class="">Categorias: @item.Categorias.Count</span>
                            </p>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        
                        <a class="btn btn-primary rounded-circle" title="Gerenciar Categorias" asp-action="GerenciarCategorias" asp-route-id="@item.Id">
                            <i class="bi bi-list-check"></i>
                        </a>

                        <a class="btn btn-primary rounded-circle" title="Editar Despesa" asp-action="Editar" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-primary rounded-circle" title="Excluir Despesa" asp-action="Excluir" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}